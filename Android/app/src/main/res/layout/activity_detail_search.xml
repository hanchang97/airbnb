<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="pickState"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.search.detail.DetailSearchActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/lo_appbar"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/airbnb_offWhite"
                app:menu="@menu/detail_search_menu" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/fcv_fragment"
            app:layout_constraintTop_toBottomOf="@id/lo_appbar"
            app:layout_constraintBottom_toTopOf="@id/clo_btn"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clo_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/btn_skip"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:enabled="true"
                app:layout_constraintHeight_percent="0.07"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"
                android:gravity="center"
                skipVisible="@{pickState}"
                android:text="@string/skip"/>

            <TextView
                android:id="@+id/btn_remove"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:enabled="true"
                app:layout_constraintHeight_percent="0.08"
                app:layout_constraintWidth_percent="0.3"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="15sp"
                android:gravity="center"
                removeVisible="@{pickState}"
                android:text="@string/remove"/>
        </androidx.constraintlayout.widget.ConstraintLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>